def draw_a_spiral():

  length = 5
  turtle.forward(length)
  turtle.left(90)
  
  length = length + 5
  print("length: ", length)
  turtle.forward(length)
  turtle.left(90)
  
  length = length + 5
  print("length: ", length)
  turtle.forward(length)
  turtle.left(90)
  
  length = length + 10
  print("length: ", length)
  turtle.forward(length)
  turtle.left(90)

  length = length + 15
  print("length: ", length)
  turtle.forward(length)
  turtle.left(90)

  length = length + 25
  print("length: ", length)
  turtle.forward(length)
  turtle.left(90)

  length = length + 40
  print("length: ", length)
  turtle.forward(length)
  turtle.left(90)

  length = length + 65
  print("length: ", length)
  turtle.forward(length)
  turtle.left(90)


def draw_a_square_with_while():
  right_angle = 90
  length = 150
  num_sides = 4
  i = 0
  while i < num_sides:
    turtle.forward(length)
    turtle.left(right_angle)
    i = i + 1


def draw_a_red_square_with_while():
  right_angle = 90
  length = 150
  num_sides = 4
  i = 0
  while i < num_sides:
    i = i + 1
    if i == 3:
      turtle.forward(length)
      turtle.left(right_angle)
      turtle.color("red")
    else:
      turtle.forward(length)
      turtle.left(right_angle)
      turtle.color("black")
  

def draw_a_rectangle_with_loop():
  right_angle = 90
  length = 150
  num_sides = 4
  i = 0
  while i < num_sides:
    if (i % 2) == 0:
      turtle.forward(length)
    else:
      turtle.forward(length/2)
    turtle.left(right_angle)
    i = i + 1
    
def draw_a_hexagon_with_while():
  right_angle = 13.9
  length = 50
  num_sides = 26
  i = 0
  while i < num_sides:
    turtle.forward(length)
    turtle.left(right_angle)
    i = i + 1


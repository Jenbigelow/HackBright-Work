import turtle

def forward(num_pixels):
  turtle.forward(num_pixels)

def right(num_degrees):
  pass

def left(num_degrees):
  pass

def draw_a_line():
  turtle.forward(50)

def draw_an_L():
  turtle.forward(50)
  turtle.left(90)
  turtle.forward(100)

def draw_an_S():
  turtle.forward(50)
  turtle.left(90)
  turtle.forward(100)
  turtle.right(90)
  turtle.forward(50)

def draw_a_square():
  turtle.forward(40)
  turtle.left(90)
  turtle.forward(40)
  turtle.left(90)
  turtle.forward(40)
  turtle.left(90)
  turtle.forward(40)

def draw_a_triangle():
  turtle.forward(50)
  turtle.left(120)
  turtle.forward(50)
  turtle.left(120)
  turtle.forward(50)

def draw_a_funky_square(width):
  turtle.forward(width)
  turtle.left(90)
  turtle.forward(width)
  turtle.left(90)
  turtle.forward(width)
  turtle.left(90)
  turtle.forward(width)
  turtle.left(90)

def draw_a_funky_triangle(side_length):
  turtle.forward(side_length)
  turtle.left(120)
  turtle.forward(side_length)
  turtle.left(120)
  turtle.forward(side_length)
  turtle.left(120)
  

